<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nepa_black"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Logged Out View -->
    <LinearLayout
        android:id="@+id/loggedOutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="80dp"
        android:layout_below="@id/backButton">

        <ImageView
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:src="@drawable/log_in"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            android:textColor="@color/nepa_white"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:paddingBottom="24dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Account" />

    </LinearLayout>

    <!-- Logged In View -->
    <LinearLayout
        android:id="@+id/loggedInLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_below="@id/backButton">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_account_circle"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/nepa_white"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tvLoggedInAs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/nepa_white"
                android:textSize="20sp"
                android:layout_toEndOf="@id/ivProfilePic"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nepa_grey_dark" />

        <TextView
            android:id="@+id/tvPersonalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textColor="@color/nepa_white"
            android:textSize="18sp"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_chevron_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nepa_grey_dark"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add/Edit Address"
            android:textColor="@color/nepa_white"
            android:textSize="18sp"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_chevron_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nepa_grey_dark"/>

        <TextView
            android:id="@+id/tvLoginSecurity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login &amp; Security"
            android:textColor="@color/nepa_white"
            android:textSize="18sp"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_chevron_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nepa_grey_dark"/>

        <TextView
            android:id="@+id/tvMyWishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Wishlist"
            android:textColor="@color/nepa_white"
            android:textSize="18sp"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_chevron_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nepa_grey_dark"/>

        <TextView
            android:id="@+id/tvOrderHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order History"
            android:textColor="@color/nepa_white"
            android:textSize="18sp"
            android:padding="16dp"
            android:drawableEnd="@drawable/ic_chevron_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nepa_grey_dark"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Logout" />

    </LinearLayout>

</RelativeLayout>
