<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nepa_black">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo_nepa"
        android:contentDescription="@string/logo_text"
        android:paddingTop="24dp"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWomenTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/women_tab"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/nepa_grey_text"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tvMenTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/men_tab"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/nepa_white"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tvKidsTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kids_tab"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/nepa_grey_text"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tvAboutUsTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_us_tab"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/nepa_grey_text"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/features_title"
                android:textColor="@color/nepa_white"
                android:textSize="14sp"
                android:paddingBottom="4dp"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:id="@+id/llFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginBottom="24dp">

                    <VideoView
                        android:id="@+id/videoViewMenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:id="@+id/soundToggleMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="16dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_volume_off"
                        android:contentDescription="@string/toggle_sound" />

                </FrameLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommendations_title"
                android:textColor="@color/nepa_white"
                android:textSize="14sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommendations_text"
                android:textColor="@color/nepa_grey_text"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop The Look"
                android:textColor="@color/nepa_white"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="48dp">

        <LinearLayout
            android:id="@+id/llShopTheLook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

    </HorizontalScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavMenu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/nepa_black"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav" />
</LinearLayout>
