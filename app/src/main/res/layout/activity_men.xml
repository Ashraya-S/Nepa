<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nepa_black">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo_nepa"
        android:contentDescription="@string/logo_text"
        android:paddingTop="24dp"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWomenTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/women_tab"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/nepa_grey_text"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tvMenTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/men_tab"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/nepa_white"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tvKidsTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kids_tab"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/nepa_grey_text"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tvAboutUsTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_us_tab"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/nepa_grey_text"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <!-- All Men -->
    <TextView
        android:id="@+id/tvMenAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/all_men_category"
        android:textColor="@color/nepa_white"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground" />

    <!-- Tops -->
    <TextView
        android:id="@+id/tvMenTops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tops_category"
        android:textColor="@color/nepa_white"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground" />

    <!-- Bottoms -->
    <TextView
        android:id="@+id/tvMenBottoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bottoms_category"
        android:textColor="@color/nepa_white"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground" />

    <!-- Shoes & Sandals -->
    <TextView
        android:id="@+id/tvMenShoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shoes_sandals_category"
        android:textColor="@color/nepa_white"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground" />

    <!-- Accessories -->
    <TextView
        android:id="@+id/tvMenAccessories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accessories_category"
        android:textColor="@color/nepa_white"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/activity_men"
        android:scaleType="centerInside"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavMen"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/nepa_black"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav" />
</LinearLayout>
